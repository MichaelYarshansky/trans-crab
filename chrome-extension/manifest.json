{
  "manifest_version": 3,
  "name": "Trans-Crab ðŸ¦€",
  "version": "3.7",
  "description": "Transcribe Google Meet and Zoom meetings",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "webRequest"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://*.zoom.us/*",
    "http://localhost:5001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/*.js",
        "services/*.js",
        "models/*.js"
      ],
      "matches": [
        "https://meet.google.com/*",
        "https://*.zoom.us/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "crab-icon16.png",
      "48": "crab-icon16.png",
      "128": "crab-icon16.png"
    }
  },
  "icons": {
    "16": "crab-icon16.png",
    "48": "crab-icon16.png",
    "128": "crab-icon16.png"
  }
}
